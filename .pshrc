## psh

use Env;
#use strict;

foreach( qx(grep '^[:space:]*alias' ~/.bashrc) ){
	if( /\;/ ){
		#Psh::evl(qq/$alias='echo "Sorry, this command will not work in psh, yet."'/);
		chomp;
		print(qq/Sorry, "$_" will not work in psh, yet.\n/);
	}else{
		Psh::evl($_);
	}
}
foreach my $i ( qw( rm cp mv ) ){
	Psh::evl("alias $i $i -vi");
}

