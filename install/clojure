#!/bin/bash

. `dirname "$0"`/../scripts/.helpers.sh

brew=(
  clojure
  leiningen
  boot-clj
  candid82/brew/joker
  borkdude/brew/babashka
  borkdude/brew/clj-kondo
)

if homebrew "${brew[@]}"; then
  true # noop
else
  echo 'fixme'
fi

[[ -d ~/.clojure ]] || ln -s ~/run_control/clojure/config ~/.clojure
[[ -d ~/.lein ]] || ln -s ~/run_control/clojure/lein ~/.lein
