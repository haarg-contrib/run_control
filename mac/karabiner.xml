<?xml version="1.0"?>
<root>

  <!-- We map caps lock to F19 with Seil.  Terminal seems to eat F19,
       so map F19 to Shift+F19 so we can use Compose Key in Terminal. -->
  <item>
    <name>Add shift to F19</name>
    <identifier>private.send_shift_with_f19</identifier>
    <autogen>__KeyToKey__ KeyCode::F19,
                          KeyCode::F19, ModifierFlag::SHIFT_L
    </autogen>
  </item>

  <!-- Below are from karabiner defaults, copied here for automation. -->
  <!-- https://github.com/tekezo/Karabiner/blob/version_10.21.0/src/core/server/Resources/include/checkbox/standards/option.xml -->
  <item>
    <name>Option_R to Control_R (only in Emacs, Terminal, X11)</name>
    <identifier>private.optionR2controlR_etx</identifier>
    <only>EMACS, TERMINAL, X11</only>
    <autogen>__KeyToKey__ KeyCode::OPTION_R, KeyCode::CONTROL_R</autogen>
  </item>

  <item>
    <name>Option_L to Control_L (only in Emacs, Terminal, X11)</name>
    <identifier>private.optionL2controlL_etx</identifier>
    <only>EMACS, TERMINAL, X11</only>
    <autogen>__KeyToKey__ KeyCode::OPTION_L, KeyCode::CONTROL_L</autogen>
  </item>

  <!-- now set control to option/alt/meta in case i want it -->
  <item>
    <name>Control_R to Option_R (only in Emacs, Terminal, X11)</name>
    <identifier>private.controlR2Option_etx</identifier>
    <only>EMACS, TERMINAL, X11</only>
    <autogen>__KeyToKey__ KeyCode::CONTROL_R, KeyCode::OPTION_R</autogen>
  </item>

  <item>
    <name>Control_L to Option_L (only in Emacs, Terminal, X11)</name>
    <identifier>private.controlL2optionL_etx</identifier>
    <only>EMACS, TERMINAL, X11</only>
    <autogen>__KeyToKey__ KeyCode::CONTROL_L, KeyCode::OPTION_L</autogen>
  </item>


</root>
